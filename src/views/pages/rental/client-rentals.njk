{% extends "layouts/base.njk" %}

{% block content %}
<section class="section">
  <div class="container">
    <h1 class="title">My Rentals</h1>
    
    {% if flash.error %}
      <div class="notification is-danger">
        {{ flash.error }}
      </div>
    {% endif %}
    
    {% if flash.success %}
      <div class="notification is-success">
        {{ flash.success }}
      </div>
    {% endif %}
    
    {% if rentals and rentals.length > 0 %}
      <div class="table-container">
        <table class="table is-fullwidth is-striped is-hoverable">
          <thead>
            <tr>
              <th>Car</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Status</th>
              <th>Total Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for rental in rentals %}
              <tr>
                <td>
                  {% if rental.car %}
                    {{ rental.car.brand }} {{ rental.car.model }}
                  {% else %}
                    Unknown car
                  {% endif %}
                </td>
                <td>{{ rental.startDate | date('DD/MM/YYYY') }}</td>
                <td>{{ rental.endDate | date('DD/MM/YYYY') }}</td>
                <td>
                  <span class="tag 
                    {% if rental.status === 'completed' %}is-success
                    {% elif rental.status === 'pending' %}is-warning
                    {% else %}is-info{% endif %}">
                    {{ rental.status | capitalize }}
                  </span>
                </td>
                <td>${{ rental.totalPrice }}</td>
                <td>
                  <div class="buttons are-small">
                    <a href="/profile/rentals/view/{{ rental.id }}?from=profile" class="button is-info" title="View Details">
                      <span class="icon">
                        <i class="fas fa-eye"></i>
                      </span>
                    </a>
                    
                    {% if rental.status === 'pending' %}
                      <form action="/profile/rentals/cancel/{{ rental.id }}" method="POST" style="display: inline;">
                        {% include "partials/csrf.njk" %}
                        <button type="submit" class="button is-danger" title="Cancel Rental"
                                onclick="return confirm('Are you sure you want to cancel this rental?')">
                          <span class="icon">
                            <i class="fas fa-times"></i>
                          </span>
                        </button>
                      </form>
                    {% endif %}
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <div class="notification is-info">
        You don't have any rentals yet. 
        <a href="/">Browse our cars</a> to make your first rental!
      </div>
    {% endif %}
  </div>
</section>
{% endblock %}