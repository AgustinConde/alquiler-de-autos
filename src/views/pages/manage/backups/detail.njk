{% extends "layouts/base.njk" %}

{% block content %}
<div class="container">
  <h1 class="title">Backup Details</h1>
  <h2 class="subtitle">ID: {{ backup.id }}</h2>
  
  <div class="box">
    <h3 class="is-size-4">Informaci√≥n general</h3>
    <p><strong>Entity Type:</strong> {{ backup.entityType }}</p>
    <p><strong>Entity ID:</strong> {{ backup.entityId }}</p>
    <p><strong>Created At:</strong> {{ backup.createdAt | date('DD/MM/YYYY HH:mm') }}</p>
  </div>
  
  {% if backup.entityType === 'car' %}
    <div class="box">
      <h3 class="is-size-4">Car Information</h3>
      <p><strong>Brand:</strong> {{ backupData.brand }}</p>
      <p><strong>Model:</strong> {{ backupData.model }}</p>
      <p><strong>Year:</strong> {{ backupData.year }}</p>
    </div>
    
    <div class="box">
      <h3 class="is-size-4">Associated Rentals ({{ rentals.length }})</h3>
      
      {% if rentals.length > 0 %}
        <table class="table is-fullwidth">
          <thead>
            <tr>
              <th>ID</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Price</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            {% for rental in rentals %}
              <tr>
                <td>{{ rental.id }}</td>
                <td>{{ rental.rentalStart | date('DD/MM/YYYY') }}</td>
                <td>{{ rental.rentalEnd | date('DD/MM/YYYY') }}</td>
                <td>${{ rental.totalPrice }}</td>
                <td>{{ rental.paymentProgress }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p>No rentals were associated with this car.</p>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="buttons">
    <a href="/manage/backups" class="button is-link">Back to Backups</a>
  </div>
</div>
{% endblock %}