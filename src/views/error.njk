{% extends "layouts/base.njk" %}

{% block content %}
<div class="container">
    <div class="notification is-danger">
        <h1 class="title">Error</h1>
        {% if error %}
            <p>{{ error }}</p>
        {% else %}
            <p>An unexpected error occurred</p>
        {% endif %}
        <a href="/" class="button is-light mt-4">Back to Home</a>
    </div>
</div>
{% endblock %}
